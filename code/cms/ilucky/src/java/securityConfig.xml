<filter-security>
    
    <global>
        <threadPoolSize value ="20"/> <!--Bang so core cua CPU -->
        <filterState value = "active"/> <!-- co 2 gia tri: active, deactive -->
        <multipartReqState value = "active"/> <!-- co 2 gia tri: active, deactive -->
        <threshold-score value= "10" />
    </global>   
    <aborted-params>
        <param-name name ="vt"/>
        <param-name name ="dojo.preventCache"/>
    </aborted-params>
    <error-types>
        <error-type id="1" name="SQL Injection" />
        <error-type id="2" name="XSS" />
    </error-types>
    
    <rules>
        <rule id="1" type="1" score="15">
            <syntax><![CDATA[redirect:|action:|redirectaction:|servletactioncontext|_memberaccess|denymethodexecution|traceevaluations|keeplastevaluation|xwork\.methodaccessor\.denymethodexecution|typeresolver|classresolver|lastevaluation|allowstaticmethodaccess|getruntime|java\.lang\.]]></syntax>
        </rule>
        <rule id="2" type="2" score="15">
            <syntax><![CDATA[^\$\{.*$|^%\{.*$]]></syntax>
        </rule>
    </rules>    
    
    <rule-groups>
<!--        <rule-group id="1" name="Rule group 1">
